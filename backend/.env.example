# Database (Prisma format)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/together_pray?schema=public"

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# App Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Cache Configuration
CACHE_TTL=300           # Cache TTL in seconds (default: 5 minutes)
CACHE_MAX_ITEMS=1000    # Maximum number of cached items

# Rate Limiting (Throttler)
THROTTLE_TTL=60000      # Time window in milliseconds (default: 1 minute)
THROTTLE_LIMIT=100      # Maximum requests per time window

# Logging
LOG_LEVEL=debug         # Logging level: error, warn, info, http, verbose, debug, silly
